@{
}
@model LoginSignup.ViewModel.LoginViewModel
<h1>Login</h1>
<div asp-validation-summary="All" class="text-danger" style="text-align:center;justify-content:center">

    <form action="LoginUsers" class="col-md-4">
        <div class="form-group">
            <label>Email Address</label>
            <input type="email" class="form-control" placeholder="Enter Email Address"
                   asp-for="Email" />
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" placeholder="Enter Your Password"
                   asp-for="Password" />

        </div>
        <button class="btn-primary">
            Submit
        </button>

    </form>
</div>
